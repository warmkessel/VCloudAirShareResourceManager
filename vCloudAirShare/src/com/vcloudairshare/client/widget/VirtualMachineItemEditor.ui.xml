<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.vcloudairshare.client.editor">
	
	
	<ui:style>
	.name {
		font-weight: bold;
		  font-size: x-large;
		  padding-right: 10px;
		  min-height:125px;
		  min-width:75px;
	}
	.desc {
		  font-size: medium;
		  padding-left: 10px;
		  padding-right: 10px;
	}
	.checkout {
		  font-size: medium;
		  padding-left: 10px;
	}
	.container {

		  padding: 4px;
	}
	</ui:style>
	<g:HTMLPanel>
		<div  class="{style.container}">
		<g:InlineLabel visible="false" ui:field="airId" />
		<g:InlineLabel styleName="{style.name}" ui:field="machinename" />
		<g:InlineLabel styleName="{style.desc}" ui:field="machineDesc" />
		<b:StatusLabel ui:field='condition'/>
		<g:Button ui:field="checkout" text="Checkout" styleName="{style.checkout}"></g:Button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 